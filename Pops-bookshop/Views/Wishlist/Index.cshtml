@using Pops_bookshop.Models.Entities
@model List<Pops_bookshop.Models.Entities.Book>

@{
    ViewData["Title"] = "My wishlist";

    ViewBag.ToRedirect = 3;
}

<h1>My wishlist</h1>

@if (Model is not null && Model.Count() > 0)
{
    foreach (Book book in Model)
    {
        <partial name="_bookDisplay" model="book" />
    }
}
else
{
    <div class="card-body">
        <p class="card-text">You have no book in your wishlist.</p>
    </div>
}